<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_area"
        android:background="@android:color/holo_red_dark"
        android:layout_width="200dp"
        android:layout_height="40dp"></RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/password_area"
        android:layout_below="@+id/id_area"
        android:background="@android:color/darker_gray"
        android:layout_alignLeft="@+id/id_area"
        android:layout_alignRight="@+id/id_area"
        android:layout_width="0dp"
        android:layout_height="40dp"></RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/signup_area"
        android:layout_below="@+id/password_area"
        android:background="@android:color/holo_orange_light"
        android:layout_width="100dp"
        android:layout_height="40dp"></RelativeLayout>
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:id="@+id/login_area"
        android:background="@android:color/holo_green_light"
        android:layout_alignTop="@+id/signup_area"
        android:layout_alignBottom="@+id/signup_area"
        android:layout_width="100dp"
        android:layout_height="0dp"></RelativeLayout>
</RelativeLayout>